! vi: ft=xdefaults

! Behaviour
rofi.fuzzy: true
rofi.modi: run,ssh,window
rofi.hide-scrollbar: true
rofi.separator-style: solid

! Font
/* rofi.dpi: 144 */
!rofi.font:DejaVu Sans Mono 8
rofi.font: {{main_font}} 14px

! Geometry
rofi.fullscreen: true
rofi.lines: 3
rofi.padding: 400
rofi.eh: 2

! Colors
rofi.color-enabled: true
! Property Name     BG       Border   Separator

rofi.dpi: 125.35;

! Property Name     BG       Border   Separator
rofi.color-window:  base00, base00, base0D

! Property Name     BG       FG       BG-alt   Head-BG  Head-FG
rofi.color-normal:  base00, base05, base00, base02, base07
rofi.color-active:  base00, base0D, base00, base00, base0D
rofi.color-urgent:  base00, base08, base00, base00, base08
